.row
  .col
    %h1 Show <%= singular_table_name %>
  .col-auto
    = link_to <%= index_helper %>_path, class: 'btn btn-outline-primary btn-sm' do
      %span.oi.oi-list
      Back
  .col-auto
    = link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-outline-primary btn-sm' do
      %span.oi.oi-pencil
      Edit

.row
  .col
    %dl.dl-horizontal
      <%- for attribute in attributes -%>
      %dt <%= attribute.human_name %>:
      %dd= @<%= singular_table_name %>.<%= attribute.name %>
      <%- end -%>
